<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <FrameLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/light_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:id="@+id/frame_layout_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:background="#000">
                    <ImageButton
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:src="@drawable/profile"
                        android:clickable="true"
                        android:background="@drawable/default_image_button_selector"
                        android:scaleType="center"
                        android:id="@+id/image_button_profile"
                        />
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/ProfileText"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/full_name_hint"
                    android:id="@+id/text_view_fullname_profile"/>
            </LinearLayout>
            <View
                style="@style/SmallDivider"/>
            <TextView
                style="@style/ProfileLink"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/text_view_email_profile"
                android:text="@string/email_hint"/>
            <View
                style="@style/SmallDivider"/>
            <TextView
                style="@style/ProfileLink"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/text_view_password_profile"
                android:text="@string/change_password_title"/>
            <View
                style="@style/SmallDivider"/>
            <LinearLayout
                style="@style/ProfileLink"
                android:layout_width="match_parent"
                android:paddingBottom="16dp">
                <TextView
                    style="@style/ProfileText"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:text="@string/available_title"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_available_profile"
                    android:textOn="YES"
                    android:textOff="NO"
                    android:layout_gravity="right|center"/>
            </LinearLayout>
            <View
                style="@style/SmallDivider"/>
            <TextView
                style="@style/ProfileLink"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/text_view_rate_rapido_link_profile"
                android:text="@string/rate_rapido_link"/>
            <View
                style="@style/SmallDivider"/>
            <TextView
                style="@style/ProfileLink"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/text_view_contact_us_link_profile"
                android:text="@string/contact_us_link"/>
            <View
                style="@style/SmallDivider"/>
            <TextView
                style="@style/ProfileLink"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/text_view_terms_of_service_link_profile"
                android:text="@string/terms_of_service_link"/>
            <View
                style="@style/SmallDivider"/>
            <TextView
                style="@style/ProfileLink"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/text_view_privacy_policy_link_profile"
                android:text="@string/privacy_policy_link"/>
            <View
                style="@style/SmallDivider"/>
        </LinearLayout>



    </FrameLayout>
</ScrollView><!-- From: file:/E:/Downloads/Rapido/app/src/main/res/layout/fragment_profile.xml -->